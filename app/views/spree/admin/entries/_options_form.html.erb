<fieldset class="no-border-bottom">
  <legend>
    <%= @entry.entry_type.name %>
    <%= model_class.human_attribute_name(:options) %>
    (<%= SolidusContent.human_provider_name(@entry.entry_type.provider_name) %>)
  </legend>

  <div class="row">
    <div class="left col-12" data-hook="admin_entry_form">
      <% rows = @entry.serialized_options.lines.size + 2 # leave two extra lines for new content %>
      <%= form.text_area :serialized_options, class: 'fullwidth', rows: rows %>
    </div>
  </div>
</fieldset>
